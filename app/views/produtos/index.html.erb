<p style="color: green"><%= notice %></p>

<h1>Listagem de Produtos</h1>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nome</th>
      <th scope="col">Preço</th>
      <th scope="col">Data de validade</th>
      <th scope="col">QTD estoque</th>
      <th>Opções</th>
    </tr>
  </thead>

  <tbody>
    <div id="produtos">
    <% @produtos.each do |produto| %>
    <tr>
      <td><%= produto.id %></td>
      <td><%= produto.nome %></td>
      <td><%= produto.preco %></td>
      <td><%= produto.data_validade.strftime("%d/%m/%Y") %></td>
      <td><%= produto.quantidade_estoque %></td>
      <td colspan="5"><%= link_to "Mostrar", produto %></td>
      <td colspan="5"><%= link_to "Editar", edit_produto_path(produto) %></td>
      <td colspan="5"><%= link_to "Apagar", produto, method: :delete %></td>

      controller: 'your_controller_name', action: 'destroy', id: @package.id, method: :delete

    </tr>
    <% end %>
    </div>


</table>


<%= link_to "Cadastrar novo produto", new_produto_path, class:"btn btn-dark" %>
